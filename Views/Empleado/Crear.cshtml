@model Empleado
@{
    ViewData["Tittle"] = "Crear";
    List<SelectListItem> items = (List<SelectListItem>)ViewBag.items;
}
<a class="btn btn-outline-dark" type="button" asp-controller="Empleado" asp-action="Index">Volver</a>
<br />
<br />

<form enctype="multipart/form-data" method="post" class="container">
    <h3> Crear Empleado</h3>
    <table class="table">
        <tr>
            <td>
                <label class="form-label">Nombre:</label>
            </td>
            <td>
                <input required type="text" class="form-control" asp-for="nombre" />
            </td>
        </tr>
        <tr>
            <td>
                <label class="form-label">Imagen:</label>
            </td>
            <td>
                <input required type="file" class="form-control" asp-for="File" />
            </td>
        </tr>
        <tr>
            <td>
                <label class="form-label">Cedula:</label>
            </td>
            <td>
                <input required type="text" class="form-control" asp-for="cedula" />
            </td>
        </tr>
        <tr>
            <td>
                <label class="form-label">Fecha de ingreso:</label>
            </td>
            <td>
                <input required type="date" class="form-control" asp-for="fechaIngreso" />
            </td>
        </tr>
        <tr>
            <td>
                <label class="form-label">Cargo:</label>
            </td>
            <td> 
                <select required id="selectCargos" asp-for="cargoId" class="form-control" asp-items="items">selecciona desde aca</select>
             
            </td>
        </tr>
         <tr>
            
            <td colspan="2">
                <button type="submit" class="btn btn-outline-success" >Guardar</button>
            </td>
        </tr>
    </table>
</form>
<label class="alert-danger"> @ViewBag.error</label>